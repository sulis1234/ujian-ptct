doctype html
html(lang="en")
	head
		title Daftar #{ucfirst(collection)}
		link(rel='stylesheet', href='../css/bootstrap.min.css')
		style .btn {margin:10px 10px 10px 0px;}
	body
		#container
			div.col-md-8.col-md-offset-2
				div.panel.panel-default
					div.panel-heading Masukan Data Barang
					div.panel-body
						form(method='post', action='./')
							div.form-group
								label(for='kd_brg') Kode Barang
								input(type='text', name='kd_brg', id='kd_brg', placeholder='Kode').form-control
							div.form-group
								label(for='nm_brg') Nama Barang
								input(type='text', name='nm_brg', id='nm_brg', placeholder='Nama').form-control
							div.form-group
								label(for='merk') Merk
								input(type='text' name='merk', id='merk', placeholder='Merk').form-control
							div.form-group
								label(for='harga') Harga
								textarea(name='harga', id='harga', placeholder='Harga').form-control
							input(type='submit', value='Tambahkan').btn.btn-success
							a(href='/#{collection}', role='button').btn.btn-danger Batal